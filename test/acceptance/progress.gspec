@objects
	progress-bar-*             progress.d2l-progress
	progress-0                 #progress0
	progress-33                #progress33
	progress-66                #progress66
	progress-100               #progress100

= Progress class =
    @on desktop
        progress-bar-*:
        	css border is "0px none rgb\(0, 0, 0\)"
            css border-radius is "10px"
            css height is "16px"
            css background-color is "rgba\(242, 243, 245, 1\)"
            css box-shadow is "rgb\(230, 234, 240\) 0px 2px 0px 0px inset"
        progress-0:
        	color-scheme >80% #F2F3F5
        progress-33:
        	color-scheme >25% #46A661
        progress-66:
        	color-scheme >50% #46A661
        progress-100:
        	color-scheme >80% #46A661
       